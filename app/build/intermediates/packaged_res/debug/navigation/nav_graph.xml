<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="in.exploreit.slc.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_homeFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="in.exploreit.slc.fragments.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/commonLoginFragment"
        android:name="in.exploreit.slc.fragments.CommonLoginFragment"
        android:label="fragment_common_auth"
        tools:layout="@layout/fragment_common_login" >
        <action
            android:id="@+id/action_commonLoginFragment_to_OTPFragment"
            app:destination="@id/OTPFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="in.exploreit.slc.fragments.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <argument
            android:name="Source"
            app:argType="in.exploreit.slc.data.ListSource" />
        <action
            android:id="@+id/action_listFragment_to_customWebViewFragment"
            app:destination="@id/customWebViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/customWebViewFragment"
        android:name="in.exploreit.slc.fragments.CustomWebViewFragment"
        android:label="fragment_custom_web_view"
        tools:layout="@layout/fragment_custom_web_view" >
        <argument
            android:name="WebViewSource"
            app:argType="in.exploreit.slc.data.WebViewSource" />
    </fragment>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="in.exploreit.slc.fragments.OTPFragment"
        android:label="fragment_otp"
        tools:layout="@layout/fragment_otp" >
        <action
            android:id="@+id/action_OTPFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>