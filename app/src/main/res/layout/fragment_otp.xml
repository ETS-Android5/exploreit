<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.OTPFragment">

    <TextView
        android:id="@+id/otp_tv"
        android:layout_width="164dp"
        android:layout_height="50dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="OTP Sent"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_imgv"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/otp_desc_tv"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Enter the OTP sent to your mobile number"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_tv"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="354dp"
        android:layout_height="110dp"
        android:layout_marginTop="64dp"
        android:hint="OTP"
        android:textColorHint="@color/material_dynamic_primary30"
        app:helperText="Request another OTP"
        app:helperTextColor="#006493"
        app:layout_constraintBottom_toTopOf="@+id/contained_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_desc_tv"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:layout_constraintBottom_toTopOf="@+id/home_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otp_desc_tv"
            app:layout_constraintVertical_bias="0.058" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/contained_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/contained_button"
        android:fontFamily="@font/montserrat_regular"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />

    <ImageView
        android:id="@+id/icon_imgv"
        android:layout_width="196dp"
        android:layout_height="58dp"
        android:src="@drawable/app_icon_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

</androidx.constraintlayout.widget.ConstraintLayout>